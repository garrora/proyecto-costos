    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>


        // Variables formulario

        const formularioCambiarContrasena = document.getElementById('formularioCambiarContrasena');
        const txtContrasenaConfirma = document.getElementById('txtContrasenaConfirma');
        const txtContrasena = document.getElementById('txtContrasena');


        formularioCambiarContrasena.addEventListener('submit', (e) => {

            e.preventDefault();
            e.stopPropagation();
            validarCampos();

        })


        const validarCampos = () => {
            let banderaUno = false;
            let banderaDos = false;

            const valorContrasena = txtContrasena.value.trim();
            const valorConfirmaContrasena = txtContrasenaConfirma.value.trim();

            const er = /^(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,18}$/;
            if (!valorContrasena) {
                validarErroneo(txtContrasena, 'Campo requerido');
                banderaUno = false;
            } else if (valorContrasena.length < 8 || !valorContrasena.match(er)) {
                validarErroneo(txtContrasena, 'La contraseña no cumple las condiciones: \n • Mínimo 8 caracteres \n • Mínimo 1 mayúscula \n • Mínimo 1 minúscula \n • Mínimo 1 valor numérico');
                banderaUno = false;
            } else {
                validarCorrecto(txtContrasena);
                banderaUno = true;
            }

            if (!valorConfirmaContrasena) {
                validarErroneo(txtContrasenaConfirma, 'Campo requerido');
                banderaDos = false;
            } else if (valorContrasena !== valorConfirmaContrasena) {
                banderaDos = false;
                validarErroneo(txtContrasenaConfirma, 'La contraseña no coincide');
                banderaDos = false;
            } else {
                validarCorrecto(txtContrasenaConfirma);
                banderaDos = true;
            }

            if (banderaUno && banderaDos) {
                btnCambiarContrasena();
            }

        }


        // Valida que el usuario haya ingresado datos en el campo de texto indicado
        const validarErroneo = (input, mensaje) => {

            const formControl = input.parentElement;
            const advertencia = formControl.querySelector('small');
            advertencia.innerText = mensaje;
            input.className = 'form-control is-invalid';

        }

        // Valida que el usuario haya ingresado datos en el campo de texto indicado
        const validarCorrecto = (input) => {
            const formControl = input.parentElement;
            const advertencia = formControl.querySelector('small');
            advertencia.innerText = '';
            input.className = 'form-control is-valid';
        }

        // Accion para cambiar contrasena
        const btnCambiarContrasena = () => {


                let datosFormularioCambiaContrasena = new FormData(formularioCambiarContrasena);
                fetchCambiarContrasena(datosFormularioCambiaContrasena);

        }

        const fetchCambiarContrasena = async (datosFormularioCambiaContrasena) => {
            try {

                
                const url = "@Url.Content("~/Configuracion/cambiarContrasena")";
                const response = await fetch(url, {
                    method: 'POST',
                    body: datosFormularioCambiaContrasena
                })

                const data = await response.json();
                if (data == 1) {


                    Swal.fire({
                        position: 'center',
                        icon: 'success',
                        title: '¡Contraseña editada correctamente!',
                        showConfirmButton: false,
                        timer: 1500,

                    })
                    txtContrasena.value = '';
                    txtContrasenaConfirma.value = '';

                } else {
                    Swal.fire({
                        position: 'center',
                        icon: 'error',
                        title: '¡Ha ocurrido un error comuníquese con los desarrolladores!',
                        showConfirmButton: false,
                        timer: 1500,

                    })
                }

            } catch (error) { console.log(error); }


        }

    </script>

